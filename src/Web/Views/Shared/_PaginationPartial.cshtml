@model Web.ViewModels.PaginationViewModel

@{
    var disableClass = "disabled";
    var prevDisabled = !Model.PaginatedList.HasPreviousPage ? $"{disableClass}" : "";
    var nextDisabled = !Model.PaginatedList.HasNextPage ? $"{disableClass}" : "";
}

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link @prevDisabled"
                href="@Model.Href&pageindex=@(Model.PaginatedList.PageIndex - 1)">Previous</a>
        </li>
        <li class="page-item">
            <a class="page-link @nextDisabled"
                href="@Model.Href&pageindex=@(Model.PaginatedList.PageIndex + 1)">Next</a>
        </li>
    </ul>
</nav>