@model Web.ViewModels.SearchViewModel

<div class="card mb-4">
    <h2 class="card-header text-center">DineSafely allows you to search the health inspections of establishments.</h2>
    <div class="card-body">
        <form asp-controller="establishment" asp-action="search" method="get">
            <div class="row">
                <div class="col-5">
                    <input type="search" asp-for="Name" class="form-control" placeholder="Name" required>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-5">
                    <input type="search" asp-for="Address" class="form-control" placeholder="Address">
                </div>
                <div class="col-2">
                    <button type="submit" class="btn btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-search" viewBox="0 0 16 16">
                            <path
                                d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                        </svg> Search
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>